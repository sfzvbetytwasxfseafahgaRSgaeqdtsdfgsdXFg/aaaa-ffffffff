-- Collect money from a safe distance
    local targetPos = targetModel.PrimaryPart and targetModel.PrimaryPart.Position
        or (targetModel:FindFirstChild("HumanoidRootPart") and targetModel.HumanoidRootPart.Position)
        or openPart.Position
   
    -- Calculate average position of all money drops first
    local dropsFolder = Workspace:FindFirstChild("Ignored")
    local cashPositions = {}
    
    if dropsFolder then
        local dropFolder = dropsFolder:FindFirstChild("Drop")
        if dropFolder then
            for _, cashPart in pairs(dropFolder:GetChildren()) do
                if cashPart:IsA("Part") and cashPart.Name == "MoneyDrop" then
                    local dist = (cashPart.Position - targetPos).Magnitude
                    if dist <= getgenv().CollectRange then
                        table.insert(cashPositions, cashPart.Position)
                    end
                end
            end
        end
    end
    
    -- Calculate center point of all cash drops
    local collectPos = targetPos
    if #cashPositions > 0 then
        local sumPos = Vector3.new(0, 0, 0)
        for _, pos in pairs(cashPositions) do
            sumPos = sumPos + pos
        end
        collectPos = sumPos / #cashPositions
    end
    
    -- Teleport to a position near the cash (offset by 5-8 studs)
    local offsetX = math.random(-8, 8)
    local offsetZ = math.random(-8, 8)
    hrp.CFrame = CFrame.new(collectPos + Vector3.new(offsetX, 3, offsetZ))
    hrp.AssemblyLinearVelocity = Vector3.new(0, 0, 0)
   
    local vacuumStart = tick()
    while (tick() - vacuumStart) < getgenv().CollectTime do
        local dropsFolder2 = Workspace:FindFirstChild("Ignored")
        if dropsFolder2 then
            local dropFolder2 = dropsFolder2:FindFirstChild("Drop")
            if dropFolder2 then
                for _, cashPart in pairs(dropFolder2:GetChildren()) do
                    if cashPart:IsA("Part") and cashPart.Name == "MoneyDrop" then
                        collectMoney(cashPart)
                    end
                end
            end
        end
        task.wait(0.1)
    end
